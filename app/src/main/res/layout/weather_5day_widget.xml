<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner"
    android:previewImage="@drawable/weather_widget_preview"
    android:minHeight="40dp"
    android:minWidth="250dp">

    <TextView
        android:id="@+id/widget_city_name"
        android:layout_width="wrap_content"
        android:text="CityName"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginEnd="11dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/widget_city_weather_5day_day1"
                android:layout_width="wrap_content"
                android:text="Day"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_row="1"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/widget_city_weather_5day_image1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/weather_icon_sunny_with_clouds"
                android:layout_row="2"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/widget_city_weather_5day_temp1"
                android:layout_width="wrap_content"
                android:text="42,0°C"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_row="3"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/widget_city_weather_5day_hum1"
                android:layout_width="wrap_content"
                android:text="42%"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_row="4"
                android:layout_gravity="top|center"
                android:textColor="@color/black"

                />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/widget_city_weather_5day_day2"
                android:layout_width="wrap_content"
                android:text="Day"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_row="1"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/widget_city_weather_5day_image2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/weather_icon_sunny_with_clouds"
                android:layout_row="2"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/widget_city_weather_5day_temp2"
                android:layout_width="wrap_content"
                android:text="42,0°C"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_row="3"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/widget_city_weather_5day_hum2"
                android:layout_width="wrap_content"
                android:text="42%"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_row="4"
                android:layout_gravity="top|center"
                android:textColor="@color/black"
                />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingStart="11dp"
            >
            <TextView
                android:id="@+id/widget_city_weather_5day_day3"
                android:layout_width="wrap_content"
                android:text="Day"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_row="1"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/widget_city_weather_5day_image3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/weather_icon_sunny_with_clouds"
                android:layout_row="2"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/widget_city_weather_5day_temp3"
                android:layout_width="wrap_content"
                android:text="42,0°C"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_row="3"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/widget_city_weather_5day_hum3"
                android:layout_width="wrap_content"
                android:text="42%"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_row="4"
                android:layout_gravity="top|center"
                android:textColor="@color/black"
                />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingStart="11dp"
            >
            <TextView
                android:id="@+id/widget_city_weather_5day_day4"
                android:layout_width="wrap_content"
                android:text="Day"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_row="1"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/widget_city_weather_5day_image4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/weather_icon_sunny_with_clouds"
                android:layout_row="2"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/widget_city_weather_5day_temp4"
                android:layout_width="wrap_content"
                android:text="42,0°C"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_row="3"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/widget_city_weather_5day_hum4"
                android:layout_width="wrap_content"
                android:text="42%"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_row="4"
                android:layout_gravity="top|center"
                android:textColor="@color/black"
                />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingStart="11dp"
            >
            <TextView
                android:id="@+id/widget_city_weather_5day_day5"
                android:layout_width="wrap_content"
                android:text="Day"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_row="1"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/widget_city_weather_5day_image5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/weather_icon_sunny_with_clouds"
                android:layout_row="2"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/widget_city_weather_5day_temp5"
                android:layout_width="wrap_content"
                android:text="42,0°C"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_row="3"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/widget_city_weather_5day_hum5"
                android:layout_width="wrap_content"
                android:text="42%"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_row="4"
                android:layout_gravity="top|center"
                android:textColor="@color/black"
                />
        </GridLayout>

    </LinearLayout>
</LinearLayout>
