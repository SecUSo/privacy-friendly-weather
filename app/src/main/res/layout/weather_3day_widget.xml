<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin"
    android:id="@+id/widget3day_layout"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner_dark"
    android:previewImage="@drawable/weather_widget_preview"
    android:minHeight="40dp"
    android:minWidth="250dp">

    <TextView
        android:id="@+id/widget_city_name"
        android:layout_width="wrap_content"
        android:text="CityName"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dp"

        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/widget_city_weather_3day_day1"
                android:layout_width="wrap_content"
                android:text="Day"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_row="1"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
            <ImageView
                android:id="@+id/widget_city_weather_3day_image1"
                android:layout_width="37dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/weather_icon_sunny_with_clouds"
                android:layout_row="2"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/widget_city_weather_3day_temp1"
                android:layout_width="wrap_content"
                android:text="-273,15°C"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_row="3"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/widget_city_weather_3day_hum1"
                android:layout_width="wrap_content"
                android:text="42%"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_row="4"
                android:layout_gravity="top|center"
                android:textColor="@color/white"

                />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/widget_city_weather_3day_day2"
                android:layout_width="wrap_content"
                android:text="Day"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_row="1"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
            <ImageView
                android:id="@+id/widget_city_weather_3day_image2"
                android:layout_width="37dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/weather_icon_sunny_with_clouds"
                android:layout_row="2"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/widget_city_weather_3day_temp2"
                android:layout_width="wrap_content"
                android:text="-273,15°C"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_row="3"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/widget_city_weather_3day_hum2"
                android:layout_width="wrap_content"
                android:text="42%"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_row="4"
                android:layout_gravity="top|center"
                android:textColor="@color/white"
                />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingStart="11dp"
            >
            <TextView
                android:id="@+id/widget_city_weather_3day_day3"
                android:layout_width="wrap_content"
                android:text="Day"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_row="1"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
            <ImageView
                android:id="@+id/widget_city_weather_3day_image3"
                android:layout_width="37dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/weather_icon_sunny_with_clouds"
                android:layout_row="2"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/widget_city_weather_3day_temp3"
                android:layout_width="wrap_content"
                android:text="-273,15°C"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_row="3"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/widget_city_weather_3day_hum3"
                android:layout_width="wrap_content"
                android:text="42%"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_row="4"
                android:layout_gravity="top|center"
                android:textColor="@color/white"
                />
        </GridLayout>

    </LinearLayout>
</LinearLayout>
